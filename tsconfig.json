{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@common": ["src/common/index"],
      "@common/*": ["src/common/*"],
      "@commands": ["src/commands/index"],
      "@commands/*": ["src/commands/*"],
      "@conditions": ["src/conditions/index"],
      "@conditions/*": ["src/conditions/*"],
      "@config": ["src/config/index"],
      "@config/*": ["src/config/*"],
      "@generics": ["src/generics/index"],
      "@generics/*": ["src/generics/*"],
      "@gherkin": ["src/gherkin/index"],
      "@gherkin/*": ["src/gherkin/*"]
    }
  },
  "include": ["./**/**.ts"],
  "exclude": ["node_modules", "build"]
}
