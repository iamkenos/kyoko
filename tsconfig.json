{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "outDir": "build",
    "paths": {
      "@iamkenos/kyoko": ["build/index"],
      "@iamkenos/kyoko/*": ["build/*"],
      "@commands/*": ["src/commands/*"],
      "@common/*": ["src/common/*"],
      "@conditions/*": ["src/conditions/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": ["./**/**.ts"],
  "exclude": ["node_modules", "build"]
}
