{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@iamkenos/kyoko": ["src/index"],
      "@iamkenos/kyoko/*": ["src/*"],
      "@commands/*": ["src/commands/*"],
      "@common/*": ["src/common/*"],
      "@conditions/*": ["src/conditions/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "include": ["./**/**.ts"],
  "exclude": ["node_modules", "build"]
}
