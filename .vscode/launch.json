{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug test:demo",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug:demo"],
      "outFiles": [
        "${workspaceFolder}/**/*.ts",
        "${workspaceFolder}/build/**/*.js"
      ],
      "env": {
        "CTX_DEBUG": "true",
        "CTX_BROWSER_IS_HEADLESS": "${input:headless}",
        "CTX_PARALLEL_WORKERS": "${input:parallel}",
        "CTX_FEATURE_TAGS": "${input:tags}"
      }
    },
    {
      "name": "debug test:init",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug:init"],
      "outFiles": [
        "${workspaceFolder}/**/*.ts",
        "${workspaceFolder}/build/**/*.js"
      ],
      "env": {
        "CTX_DEBUG": "true",
        "CTX_BROWSER_IS_HEADLESS": "${input:headless}",
        "CTX_PARALLEL_WORKERS": "${input:parallel}",
        "CTX_FEATURE_TAGS": "${input:tags}"
      }
    }
  ],
  "inputs": [
    {
      "id": "tags",
      "type": "promptString",
      "default": "@debug",
      "description": "Cucumber tag expression"
    },
    {
      "id": "parallel",
      "type": "promptString",
      "default": "",
      "description": "Browsers running in parallel"
    },
    {
      "id": "headless",
      "type": "promptString",
      "default": "true",
      "description": "Should run in headless?"
    }
  ]
}
