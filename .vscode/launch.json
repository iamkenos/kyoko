{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug test:demo",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/Users/a/.nvm/versions/node/v20.10.0/bin/npm",
      "runtimeArgs": ["run-script", "debug:demo"],
      "outFiles": [
        "${workspaceFolder}/**/*.ts",
        "${workspaceFolder}/build/**/*.js"
      ],
      "env": {
        "CTX_BROWSER_IS_HEADLESS": "false",
        "CTX_PARALLEL_WORKERS": "${input:parallel}",
        "CTX_FEATURE_TAGS": "${input:tags}"
      }
    }
  ],
  "inputs": [
    {
      "id": "tags",
      "type": "promptString",
      "default": "@debug",
      "description": "Cucumber tag expression"
    },
    {
      "id": "parallel",
      "type": "promptString",
      "default": "0",
      "description": "Browsers running in parallel"
    }
  ]
}
