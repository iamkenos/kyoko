{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "test",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test"],
      "outFiles": [
        "${workspaceFolder}/**/*.ts",
        "${workspaceFolder}/node_modules/@iamkenos/kyoko/build/**/*.js"
      ],
      "env": {
        "CTX_BROWSER_IS_HEADLESS": "false",
        "CTX_PARALLEL_WORKERS": "${input:parallel}",
        "CTX_FEATURE_TAGS": "${input:tags}",
        "CTX_FEATURE_PATHS": "${file}"
      }
    }
  ],
  "inputs": [
    {
      "id": "tags",
      "type": "promptString",
      "default": "",
      "description": "Cucumber tag expression"
    },
    {
      "id": "parallel",
      "type": "promptString",
      "default": "0",
      "description": "Browsers running in parallel"
    }
  ]
}
