{
  "name": "@iamkenos/kyoko",
  "version": "0.9.1",
  "description": "Playwright & CucumberJS mixed with presets and additional features.",
  "bin": {
    "kyoko": "bin/kyoko.js"
  },
  "scripts": {
    "prepare": "husky install",
    "release:first": "standard-version --first-release",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "prebuild": "rimraf build && rimraf *.tgz",
    "build": "tsc --build tsconfig.build.json",
    "postbuild": "run-s postbuild:**",
    "postbuild:paths": "resolve-tspaths",
    "postbuild:cp:resources": "shx cp -R ./test/init build/cli/resources",
    "postbuild:mv:ckconfig": "npx shx sed -i '../../build/config' '@iamkenos/kyoko' ./build/cli/resources/cucumber.js",
    "postbuild:mv:tsconfig": "shx mv ./build/cli/resources/tsconfig.test.json ./build/cli/resources/tsconfig.json",
    "postbuild:rm:results": "rimraf ./build/cli/resources/results/",
    "pack": "npm run build && npm pack",
    "lint": "eslint ./",
    "serve:demo": "http-server ./test/demo/app -s",
    "pretest:demo": "playwright install --with-deps chromium",
    "test:demo": "start-test serve:demo 8080 run:demo",
    "run:demo": "cucumber-js -c test/demo/cucumber.js",
    "report:demo": "allure generate --single-file test/demo/results/allure/ -c -o test/demo/results/allure/html/",
    "debug:demo": "npm run test:demo",
    "pretest:init": "npm run pretest:demo",
    "test:init": "cucumber-js -c test/init/cucumber.js",
    "report:init": "allure generate --single-file test/init/results/allure/ -c -o test/init/results/allure/html/",
    "debug:init": "npm run test:init",
    "test:unit": "echo TODO"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd"
  ],
  "author": "iamkenos <alexis.matunog@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/iamkenos/kyoko.git"
  },
  "license": "ISC",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "config": [
        "./build/config/index.d.ts"
      ],
      "plugins": [
        "./build/plugins/index.d.ts"
      ],
      "utils": [
        "./build/utils/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./build/index.js"
    },
    "./config": {
      "import": "./src/config/index.ts",
      "require": "./build/config/index.js"
    },
    "./plugins": {
      "import": "./src/plugins/index.ts",
      "require": "./build/plugins/index.js"
    },
    "./utils": {
      "import": "./src/utils/index.ts",
      "require": "./build/utils/index.js"
    }
  },
  "dependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@dotenvx/dotenvx": "^1.49.1",
    "@playwright/test": "^1.55.0",
    "@types/fs-extra": "^11.0.4",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.1",
    "callsites": "^3.1.0",
    "change-case": "^4.1.2",
    "dotenv": "^17.2.2",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "loglevel": "^1.9.2",
    "loglevel-plugin-prefix": "^0.8.4",
    "npm-run-all": "^4.1.5",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-recaptcha": "^3.6.8",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/glob": "^9.0.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "resolve-tspaths": "^0.8.23",
    "shx": "^0.4.0",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^2.1.1"
  }
}
